@model OnlineShop.Models.Product
@{
    ViewBag.Title = "Product Management";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h4>@Html.ActionLink("Product", "Index") > Upload Image</h4>
<div class="card shadow">
    <div class="card-body">
        <h3 class="text-info mb-3">Product's name: @Model.ProductName</h3>
        <div class="text-danger"> @ViewBag.Information</div>

        @using (Html.BeginForm("UploadImg", "ManageProduct", FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <h4>Image</h4>
            <div class="custom-file mb-3">
                <input type="file" class="custom-file-input" id="inputfile" name="Img" multiple>
                <label class="custom-file-label" for="inputfile">Select image</label>
            </div>

            <h4>Image 1</h4>
            <div class="custom-file mb-3">
                <input type="file" class="custom-file-input" id="inputfile" name="Img1" multiple>
                <label class="custom-file-label" for="inputfile">Select image</label>
            </div>

            <h4>Image 2</h4>
            <div class="custom-file mb-3">
                <input type="file" class="custom-file-input" id="inputfile" name="Img2" multiple>
                <label class="custom-file-label" for="inputfile">Select image</label>
            </div>

            <h4>Image 3</h4>
            <div class="custom-file mb-3">
                <input type="file" class="custom-file-input" id="inputfile" name="Img3" multiple>
                <label class="custom-file-label" for="inputfile">Select image</label>
            </div>

            <h4>Image 4</h4>
            <div class="custom-file mb-3">
                <input type="file" class="custom-file-input" id="inputfile" name="Img4" multiple>
                <label class="custom-file-label" for="inputfile">Select image</label>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Upload</button>
                @Html.ActionLink("Return", "Index", null, htmlAttributes: new { @class = "btn btn-sm btn-secondary " })
            </div>
        }
        </div>
</div>

