@model OnlineShop.Models.Category
@{
    ViewBag.Title = "Product Type Management";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h4>@Html.ActionLink("Product Type Management", "Index") > Delete</h4>
<div class="card shadow">
    <div class="card-body">
        <h4 class="card-title">Information Type Product</h4>
        <hr />
        <div class="row ">
            <label class="col-sm-2 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.CategoryID)</label>
            <div class="col-sm-6 col-form-label">@Html.DisplayFor(model => model.CategoryID)</div>
        </div>
        <div class="row ">
            <label class="col-sm-2 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.CategoryName)</label>
            <div class="col-sm-6 col-form-label">@Html.DisplayFor(model => model.CategoryName)</div>
        </div>
        <div class="row ">
            <label class="col-sm-2 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.Icon)</label>
            <div class="col-sm-6 col-form-label">@Html.DisplayFor(model => model.CategoryID)</div>
        </div>
        <div class="row ">
            <label class="col-sm-2 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.Alias)</label>
            <div class="col-sm-6 col-form-label">@Html.DisplayFor(model => model.CategoryName)</div>
        </div>
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-4">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Delete" class="btn btn-sm btn-primary font-weight-bold w-25" />
                    @Html.ActionLink("Return", "Index", null, htmlAttributes: new { @class = "btn btn-sm btn-secondary font-weight-bold w-25" })
                }
            </div>
        </div>

    </div>
</div>
