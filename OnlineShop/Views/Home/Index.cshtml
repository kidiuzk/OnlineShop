@using OnlineShop.Models
@model IEnumerable<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}
@{
    IEnumerable<Product> lstLTM = (IEnumerable<Product>)ViewBag.ListLTM;
}



<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/Img/logoGreenwich.jpg" alt="Greenwich" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Content/Img/lg-logo-1.jpg" alt="LG" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Content/Img/panasonic-logo-scaled.jpg" alt="Panasonic" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Content/Img/Xiaomi-Mi-Logo.jpg" alt="Xiaomi" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Content/Img/samsung-logo-1993.jpg" alt="Xiaomi" style="width:100%;">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="container">
    @Html.Partial("~/Views/Product/ProductPartial.cshtml", lstLTM)
</div>