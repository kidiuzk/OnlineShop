@model OnlineShop.Models.Role
@{
    ViewBag.Title = "Permissions Management";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h4>@Html.ActionLink("Permissions Management", "Index") > Edit</h4>
<div class="card">
    <div class="card-body">
        @using (Html.BeginForm("Edit", "ManageRole", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.Hidden("RoleID", Model.RoleID)
                <div class="form-group row ">
                    <label class="col-sm-2 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.RoleID)</label>
                    <div class="col-sm-6 col-form-label">@Html.DisplayFor(model => model.RoleID)</div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "col-form-label font-weight-bold col-sm-2" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row ">
                    <div class="col-sm-4 mt-3">
                        <input type="submit" value="Edit" class="btn btn-sm btn-primary font-weight-bold w-25" />
                        @Html.ActionLink("Return", "Index", null, htmlAttributes: new { @class = "btn btn-sm btn-secondary font-weight-bold w-25" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>